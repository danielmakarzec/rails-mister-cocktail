<div class="h-100 d-flex flex-column justify-content-between align-items-center">
    <h1 id="index-header" class="text-center">COCKTAIL CITY</h1>
    <div class="cards d-flex">
      <% @cocktails.each do |c| %>
        <div class="card">

          <!-- show link -->
          <%= link_to cocktail_path(c), :id => 'link_to_show' do %>
            <h2><%= c.name %></h2>
          <% end %>

          <!-- delete button -->
          <%= link_to cocktail_path(c), method: :delete, :class => 'delete' do %>
            <i class="far fa-trash-alt"></i>
            <% end %>
        </div>
      <% end %>
      <%= link_to new_cocktail_path do %>
        <div class="card d-flex justify-content-center align-items-center">
          <p>+</p>
        </div>
      <% end %>
    </div>

  <!-- footer -->
  <footer class="justify-content-center">
    &copy; Copyright -- mr-cocktails-318@cocktailcity.com
  </footer>

  <script>
    const cardsElem = document.querySelector('.cards');
    const cards = document.querySelectorAll('.card');
    const overlap = (((cards.length + 1) * 200) + 200 - document.documentElement.clientWidth)/(cards.length + 1);
    // console.log(document.documentElement.clientWidth);
    // console.log(window.  innerWidth);
    // console.log(cards.length);
    cards.forEach((card) => {
      card.style.marginLeft = -overlap+'px';
    });
    cardsElem.style.marginLeft = overlap/2+'px';
  </script>
</div>
